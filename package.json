        "typescript": "^4.0.5",
        "update-notifier": "^5.0.1"
    },
    "dependencies": {},
    "prettier": "@cortex-js/prettier-config",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm test"
        }
    },
    "lint-staged": {
        "**/*.ts": [
            "eslint --fix",
            "git add"
        ],
        "*.{js,css,json,md}": [
            "prettier --write",
            "git add"
        ]
    }
