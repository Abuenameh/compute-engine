        "eslint-plugin-prettier": "^3.1.4",
        "http-server": "^0.12.3",
        "husky": "^4.3.0",
        "jest": "^26.6.3",
        "jest-silent-reporter": "latest",
        "lint-staged": "^10.5.1",
        "prettier": "^2.1.2",
        "rollup": "^2.33.1",
